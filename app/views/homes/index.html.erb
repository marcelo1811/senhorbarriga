<div class="homes-index-wrapper">
  <div class="homes-index-top-wrapper">
    <!-- Title -->
    <div class="homes-title">
      <h3> home index </h3>
    </div>
    <!-- end title -->

    <!-- Collapsible button with Owner Listing  -->
    <button data-toggle="collapse" data-target="#demo" class="btn btn-primary">Meu anúncio</button>
    <!-- end collapsible -->

    <!-- Div with Owner Listing  -->
    <div class="owner-home">
      <div id="demo" class="collapse">

      <!-- Owner Listing -->
      <h2>Meus anúncios</h2>
      <% @homes.each do |home| %>
        <% if policy(home).owner? %>
        <p>
          <%= link_to (home_path(home)) do %>
          title: <%= home.title %>
          <% end %>
        </p>
        <p>address: <%= home.address %></p>
        <p>description: <%= home.description %></p>
        <p>name: <%= home.owner.first_name %></p>
        <p>phone: <%= home.owner.phone_number %></p>
        --------------------------
        <% end %>
      <% end %>
      <!-- end owner listing -->
      </div>
    </div>
    <!-- end div with owner listing -->
    <%= link_to 'Novo anúncio', new_home_path, :class => 'btn btn-primary'%>
  </div>

  <!-- Middle Wrapper -->

  <%= form_tag(homes_path, method: :get) do %>
    <%= label_tag 'Local de referência' %>
    <%= text_field_tag :location, params[:location] %>
    <%= label_tag 'Distância máxima' %>
    <%= select_tag :max_dist, "<option>-</option><option>5km</option><option>10km</option><option>15km</option><option>30km</option>".html_safe %>
    <%= submit_tag 'Pesquisar' %>
  <% end %>


  <div class="homes-index-middle-wrapper">
    <!-- Map Div -->
    <div class="map-wrapper">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
    <!--END MAP-->


    <!-- List Div -->
    <div class="list-wrapper">
      <h2>Outros anúncios</h2>
      -----------------------
      <% @mark_homes.each do |home| %>
      <% if policy(home).owner? == false %>
        <p>
          <%= link_to (home_path(home)) do %>
          title: <%= home.title %>
          <% end %>
        </p>
        <p>address: <%= home.address %></p>
        <p>description: <%= home.description %></p>
        <p>name: <%= home.owner.first_name %></p>
        <p>phone: <%= home.owner.phone_number %></p>
        <p>
          <% if policy(home).logged_in?%>
            <% if policy(home).liked? == false%>
                <%= link_to 'like', home_listings_path(home_id: home),
                    method: 'post', :class => 'btn btn-success like-button', :id => home.id, remote: true %>
            <% else %>
              <%= link_to 'dislike', home_listings_path(home_id: home),
                    method: 'post', :class => 'btn btn-warning like-button', :id => home.id, remote: true %>
            <% end %>
          <% else %>
              <%= link_to 'like', home_listings_path(home_id: home),
                  method: 'post', :class => 'btn btn-success like-button'%>
          <% end %>
        </p>
        --------------------------
        <% end %>
      <% end %>
    </div>
  </div>
</div>
