<div class="users-signin-forgotpass-wrapper">

  <!-- Title -->
  <div class="users-signin-forgotpass-title">
  <h2>Forgot your password?</h2>
  </div>
  <!-- End Title -->

  <!-- Card Forgot Password -->
  <div class="users-signin-forgotpass-form-wrapper">
    <div class="users-signin-forgotpass-form">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <!-- Div to align buttons -->
      <div class="users-signin-forgotpass-buttons">
        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions" %>
        </div>
  <% end %>

        <%= render "devise/shared/links" %>
      </div>
    <!-- Div to align buttons Ends -->
    </div>
  </div>
  <!-- Card Forgot Password Ends -->

</div>
